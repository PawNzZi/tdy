/* item.wxss */
.item-view{
  height: 160rpx;
  margin: 30rpx;
  display: flex;
  flex-direction: row;
  background: #f8f8f9;
  padding: 20rpx;
  border-radius: 15rpx;
  
}
.item-img{
  width: 160rpx;
  height: 160rpx;
  min-height: 160rpx;
  min-width: 160rpx;
  border-radius: 10rpx;
}
.item-right{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  width: 100%;
  overflow: hidden;
}
.item-right-top-top{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}
.item-right-top{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  align-items: center;
}
.item-right-top-middle{
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
  align-items: center;
  justify-content: space-between;
}
.item-title{
  font-size: 24rpx;
  color: #80848f;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* width:95%; */
}
.item-price-text{
  font-size: 24rpx;
  color: #bbbec4;
}
.item-price{
  font-size: 28rpx;
  color: #000;
  font-weight: bold;
}
.item-oldprice{
  font-size: 22rpx;
  color: #bbbec4;
  margin-left: 40rpx;
  text-decoration: line-through;
}
.item-sales{
  font-size: 22rpx;
  color: #bbbec4;
}
