/* pages/search/search.wxss */
.search-input{
  width: 100%;
  height: 110rpx;
  padding: 25rpx 30rpx;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  align-items: center;
  background: #fff;
}
.contains{
  display: flex;
  flex-direction: row;
  background: #f8f8f9;
  width: 100%;
  align-items: center;
  border-radius: 10rpx;
}
.icon-search{
  margin-left: 20rpx;
  margin-bottom: 7rpx;
}
.input{
  margin-left: 20rpx;
  color:#000;
  font-size: 28rpx;
  width: 80%;
  height: 70rpx;
}
.top-view{
  position: fixed;
  top: 0;
  width: 100%;
}
.kongbai-view{
  width: 100%;
  height: 110rpx;
}
