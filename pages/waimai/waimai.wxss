/* pages/waimai/waimai.wxss */
page{
  background-color: #f1f0f0;
}
.tabar{
  display: flex;
  flex-direction: row;
  padding: 25rpx 30rpx;
  background-color: #fff;
}
.item{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 30rpx;
}
.line{
  height: 10rpx;
  background: #ff9900;
  width: 40rpx;
  margin-top: 15rpx;
}
.tabar-item{
  height: 110rpx;
  width: 110rpx;
}
.array-item{
  display: flex;
  flex-direction: column;
  padding: 25rpx;
  background: #fff;
  margin:20rpx;
  border-radius: 9rpx;
}
.head{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 25rpx;
}
.icon{
  width: 30rpx;
  height: 30rpx;
}
.img{
  width: 100%;
  height: 165rpx;
}
.top-t0{
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
  margin-left: 15rpx;
}
.top-t1{
  font-size: 20rpx;
  color: #000;
  background: #ff9900;
  height: 40rpx;
  width: 100rpx;
  text-align: center;
  line-height: 40rpx;
}
.top-t2{
  font-size: 28rpx;
  color: #fff;
  background: #ed3f14;
  height: 50rpx;
  width: 150rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 50rpx;
}