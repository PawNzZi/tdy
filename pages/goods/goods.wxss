/* pages/goods/goods.wxss */
.swiper{
  width: 100%;
  height: 500rpx;
}
.slide-image{
  width: 100%;
  height: 500rpx;
}
.title-view{

  display: flex;
  padding-left: 30rpx;
  padding-right: 30rpx; 
  margin-top: 30rpx;
  align-items: center;
  height: 40rpx;
  flex-direction: row;
  justify-content: space-between;
}
.title-left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.good-title{
  font-size: 30rpx;
  color: #000;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
  /* width: 600rpx; */
}
.good-price{
  font-size: 30rpx;
  color: red;
  margin-left: 20rpx;
}
.shopname{
  font-size: 24rpx;
  color: #ff9900;

}
.tip-view{
  width: 100%;
  height: 80rpx;
  background: #f8f8f9;
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.tip-text{
  font-size: 20rpx;
  color: #bbbec4;
  
}
.price-view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 20rpx;
}
.current-price{
  font-size: 26rpx;
  color: #bbbec4;
  text-decoration: line-through;
}
.sales{
  font-size: 26rpx;
  color: #bbbec4;
}
.divider{
  margin-left: 60rpx;
  margin-right: 60rpx;
  height: 48rpx;
}
.copy-view{
  height: 100rpx;
  width: 100%;
  background: #ff9900;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0
}
.copy-code{
  font-size: 30rpx;
  color: #fff;
}
.cover{
  width: 100%;
  margin-bottom: 110rpx;
  margin-top: 20rpx;
  height: 1200rpx;
}
