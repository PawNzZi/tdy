/* pages/search/search.wxss */

.swiper-view{
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: fixed;
  top: 100rpx;
  z-index: 1;
  width: 100%;
}
.swiper{
  width: 100%;
  height: 300rpx;
  background: #ff9900;
  border-radius: 15rpx;
}
.search-input{
  width: 100%;
  /* height: 110rpx; */
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  align-items: center;
  /* background: #ff9900; */
  justify-content: center;
}
.contains{
  display: flex;
  flex-direction: row;
  background: #f8f8f9;
  width: 100%;
  align-items: center;
  border-radius: 10rpx;
}
.icon-search{
  margin-left: 20rpx;
  margin-bottom: 7rpx;
}
.input{
  margin-left: 20rpx;
  color:#000;
  font-size: 28rpx;
  width: 80%;
  height: 70rpx;
}
