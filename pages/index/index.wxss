.kongbai-view{
  width: 100%;
  height: 110rpx;
}
.slide-image{
  width: 100%;
  height: 400rpx;
  border-radius: 15rpx;
}

.hot-search{
  display: flex;
  flex-direction: column;
  margin-top: 80rpx;
}
.right-enter{
  display: inline-flex;
  flex-direction: row;
  justify-content: space-between;
  margin-right: 40rpx;
}
.right-view{
  display: inline-flex;
  flex-direction: row;
}
.enter-text{
  font-size: 22rpx;
  color: #80848f;
}
.right-icon{
  height: 70rpx;
}

.hot-title{
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 40rpx;
  margin-bottom: 30rpx;
}
.hot-view{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.kongbai-hot{
  width: 100%;
  height: 165rpx;
}
